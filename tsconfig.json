{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2018",
      "ES2019.Array",
      "ES2019.Object"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noEmit": true,
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/.*.js"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
